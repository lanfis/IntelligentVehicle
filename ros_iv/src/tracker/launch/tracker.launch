<launch>
  <node name="image_view" pkg="image_view" type="image_view" respawn="false" output="screen">
    <remap from="image" to="/tracking_system/image_tracked"/>
    <param name="autosize" value="true" />
  </node>
  <node name="tracking_system" pkg="tracking_system" type="tracking_system" respawn="false" output="screen">
    <remap from="image_raw" to="/pic_sim/image_raw"/>
    <param name="/image_equalized" value="false" />
    <param name="/center_position" value="false" />
    <param name="/face_detection" value="true" />
  </node>
</launch>
